{
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*" }
  ],
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/api/([^/]+)/([^/]+)",
      "dest": "/api/[entity]?entity=$1&id=$2",
      "methods": ["GET", "PUT", "DELETE"]
    },
    {
      "src": "/api/([^/]+)",
      "dest": "/api/[entity]?entity=$1",
      "methods": ["GET", "POST"]
    }
  ]
}